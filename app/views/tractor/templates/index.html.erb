<div class="page-header">
  <h1>eMail Templates</h1>
</div>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Modules</th>
    <th></th>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.title %></td>
    <td><%= template.modules %></td>
    <td><%= link_to 'Show', template %> |
    <%= link_to 'Edit', edit_template_path(template) %> |
    <%= link_to 'Destroy', template, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Template', new_template_path, :class => 'btn btn-info' %>
